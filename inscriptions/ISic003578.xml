                <ab>
                    <lb n="1"/>Heiae · Melponi ·
                    <lb n="2"/><roleName type="civic.religious" subtype="sacerdos.augustae">Sacerdoti · augu<hi rend="ligature">st</hi><unclear>ae</unclear></roleName>
