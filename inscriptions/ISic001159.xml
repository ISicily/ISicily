                <ns0:ab>
                    <ns0:w n="5" lemma="&#934;&#945;&#953;&#957;&#974;">&#934;&#945;&#953;&#957;&#959;&#8150;</ns0:w>
                    <ns0:w n="10" lemma="&#918;&#969;&#960;&#973;&#961;&#951;&#962;">&#918;&#969;&#960;&#973;&#961;&#959;&#965;</ns0:w>
                    <ns0:w n="15" lemma="&#967;&#945;&#943;&#961;&#969;">&#967;&#945;&#8150;&#961;&#949;</ns0:w>
