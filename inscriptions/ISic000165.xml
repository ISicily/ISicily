                    <lb n="2"/><name><supplied reason="undefined" evidence="previousEditor">Phil</supplied><unclear>a</unclear>rgyrus</name></persName>
                    <lb n="3"/><supplied reason="undefined" evidence="previousEditor">et</supplied> <persName type="attested"><name><supplied reason="lost">Cor</supplied><unclear>n</unclear>ificia</name>
