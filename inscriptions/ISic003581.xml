            <ns0:div type="edition" xml:space="preserve" xml:lang="la" resp="#JP">
                <ns0:ab>
                    <ns0:lb n="1" /><ns0:gap reason="lost" extent="unknown" unit="character" />m &#183; pa<ns0:unclear>t</ns0:unclear><ns0:gap reason="lost" extent="unknown" unit="character" />
                </ns0:ab>
