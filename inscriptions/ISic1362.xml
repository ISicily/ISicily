            <div type="edition" xml:lang="grc">
                <ab><lb n="1"/>ἐν
                    <lb n="2" break="no"/>θάδε
                    <lb n="3"/>κῖτε Λε
                    <lb n="4" break="no"/>οντία
                    <expan>
