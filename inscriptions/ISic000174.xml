                    <lb n="2" xml:id="ARoBo"/><w xml:id="ARoBy" n="20">Euplia</w> <g ref="#ivy-leaf" xml:id="ARoBΙ" n="25">❦</g> <w xml:id="ARoBΤ" n="30">v<unclear xml:id="ARoBε">i</unclear>
                    <lb n="3" break="no" xml:id="ARoBο"/>xit</w> <g ref="#ivy-leaf" xml:id="ARoCA" n="35">❦</g> <w xml:id="ARoCK" n="40"><expan xml:id="ARoCU"><abbr xml:id="ARoCe">an</abbr><ex xml:id="ARoCo">nis</ex></expan></w> <w xml:id="ARoCy" n="45"><expan xml:id="ARoCΙ"><hi rend="reversed" xml:id="ARoCε"><abbr xml:id="ARoCΤ"><am>Ↄ</am></abbr></hi><ex cert="low" xml:id="ARoDA">circiter</ex></expan></w> <num value="55" xml:id="ARoDK">LV</num>
                </ab>
