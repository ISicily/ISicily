            <div type="edition" xml:space="preserve" xml:lang="grc" resp="#JP">
                  <ab>
                      <lb n="1"/>Μη<gap reason="illegible" unit="character" quantity="1"/>τριου
                      <lb n="2"/>ἀνάθεμα
                      <lb n="3"/>Ἀφροδίτη
                 </ab>
