                        <objectDesc>
                            <supportDesc>
                                <support>
                                    <p>Rectangular plaque of grey stone, complete. All edges original and complete. Rear is flat. Modern red paint on sides.</p>
                                    <material ana="#material.stone.limestone" ref="http://www.eagle-network.eu/voc/material/lod/66.html">limestone</material>
