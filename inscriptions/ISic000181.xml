                    <lb n="2"/><name><unclear>Ce</unclear>rtus</name></persName> <g ref="#interpunct">·</g> <w><expan><abbr>v</abbr><ex>ixit</ex></expan></w> <g ref="#interpunct">·</g> <w><expan><abbr>a</abbr><ex>nnis</ex></expan></w> <g ref="#interpunct">·</g> <num value="13">XIII</num>
