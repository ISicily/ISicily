                <ns0:ab>
                    <ns0:lb n="1" /><ns0:gap reason="lost" extent="unknown" unit="character" /><ns0:supplied reason="lost">Conco</ns0:supplied><ns0:unclear>r</ns0:unclear>diae &#183; Aug<ns0:supplied reason="lost">ustae</ns0:supplied><ns0:gap reason="lost" extent="unknown" unit="character" />
                    <ns0:lb n="2" /><ns0:gap reason="lost" extent="unknown" unit="character" />ethus &#183; <ns0:roleName type="civic.religious" subtype="sevir">sev<ns0:supplied reason="lost">ir</ns0:supplied></ns0:roleName><ns0:gap reason="lost" extent="unknown" unit="character" />                    
                </ns0:ab>
            </ns0:div>
            <ns0:div type="apparatus">
                <ns0:listApp><ns0:app><ns0:note>Text based on autopsy</ns0:note></ns0:app></ns0:listApp>
