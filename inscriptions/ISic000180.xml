            <div type="edition" xml:space="preserve" xml:lang="la" resp="#JP #AA">
                <ab>
                    <lb n="1"/><persName type="attested"><name><abbr>C</abbr><ex>aius</ex></name> <g ref="#interpunct">·</g> <name>Haterius</name>
                    <lb n="2"/><persName type="attested"><name type="libertinatio"><expan><abbr>C</abbr><ex>ai</ex></expan></name></persName> <g ref="#interpunct">·</g> <w><expan><abbr>l</abbr><ex>ibertus</ex></expan></w> <g ref="#interpunct">·</g>
