                <ab>
                    <lb n="1"/><unclear>ὁ</unclear> δᾶμ<unclear>ος</unclear> <supplied reason="lost">τῶν Ἁλαισίνων</supplied>
                    <lb n="2"/>Μάρκον <gap reason="lost" unit="character" quantity="2"/><gap reason="illegible" unit="character" quantity="2"/><gap reason="lost" unit="character" quantity="5"/>
