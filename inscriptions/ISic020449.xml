            <div type="edition" xml:space="preserve" xml:lang="grc" resp="#VM">
                <ab>
                    <lb n="1"/><persName type="attested"><name>hε̄ρακλεῖ</name></persName>
                </ab>
            </div>
            <div type="apparatus">
