                  <ab xml:lang="la">
                    <lb n="1"/>· <expan><abbr>M</abbr><ex cert="low">arcia</ex></expan> · Marylla
                    <lb n="2"/>vixit · <expan><abbr>ann</abbr><ex>is</ex></expan> <num atLeast="50" atMost="59"><supplied reason="lost">L</supplied><gap reason="lost" unit="character" extent="unknown"/></num>
