<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
    <teiHeader>
        <fileDesc>
            <titleStmt>
                <title>ISicily Glyphs Authority List</title>
                <author xml:id="SS">Simona Stoyanova</author>
                <author xml:id="JP">Jonathan Prag</author>
                <author xml:id="VM">Valentina Mignosa</author>
            </titleStmt>
            <publicationStmt>
                <p>Licensed under a Creative Commons-Attribution 4.0 licence.</p>
            </publicationStmt>
            <sourceDesc>
                <p>Created manually</p>
            </sourceDesc>
        </fileDesc>
        <encodingDesc>
            <charDecl>
                <!-- punctuation and delimiters -->
                <glyph xml:id="interpunct">
                    <glyphName>Interpunct</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>&#xB7;</value> <!-- for reference, ano teleia is  &#x387; -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>interpunct</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="dipunct">
                    <glyphName>dipunct</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>&#x205A;</value> 
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>dipunct</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="tripunct">
                    <glyphName>Tripunct</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>⋮</value> <!-- &#x205D; -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>tripunct</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="stop">
                    <glyphName>Stop</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>•</value> <!-- &#x2022; -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>stop</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="long-vertical-bar">
                    <glyphName>Long vertical bar</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>|</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="double-vertical-bar">
                    <glyphName>Double vertical bar</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>‖</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="leaf">
                    <glyphName>Leaf</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>❦</value>  <!-- &#x2766; -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>leaf</value>
                    </charProp>
                </glyph>
                
                <!-- numerals and dating -->
                <glyph xml:id="reversed-hundred">
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>Ↄ</value>  <!-- &#x2183; -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>reversed 100</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="thousand">
                    <glyphName>Milliaria</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>ↀ</value>  <!-- &#x2180; -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>1000</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="fivethousand">
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>ↁ</value> <!-- &#x2181; -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>5000</value>
                    </charProp>
                </glyph>
                <glyph xml:id="tenthousand">
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>ↂ</value> <!-- &#x2182; -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>10,000</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="year">
                    <glyphName>Year</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>L</value> <!-- there is no charcter for this, most projects use uppercase L -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>year</value>
                    </charProp>
                </glyph>
                
                <!-- currencies -->
                <glyph xml:id="denarius">
                    <glyphName>Denarius</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>&#x10196;</value>
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>denarius</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="sestertius">
                    <glyphName>Sestertius</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>&#x10198;</value>
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>sestertius</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="drachma">
                    <glyphName>Drachma</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>&#x10175;</value>
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>drachma</value>
                    </charProp>
                </glyph>
                
                <!-- military -->
                <glyph xml:id="centuria">
                    <glyphName>Centurial sign</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>&#x1019B;</value>
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>centuria</value>
                    </charProp>
                </glyph>
                
                <!-- religious -->
                <glyph xml:id="christogram">
                    <glyphName>Christogram</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>☧</value> <!-- &#x2627; -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>chi-rho</value>
                    </charProp>
                </glyph>

                <glyph xml:id="cross">
                    <glyphName>Cross</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>&#x2020;</value>
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>cross</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="stauros">
                    <glyphName>Stauros</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>+</value>
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>stauros</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="staurogram">
                    <glyphName>Staurogram</glyphName> <!-- tau-rho -->
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>&#x101a0;</value>
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>staurogram</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="menorah">
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>‎&#x1f54e;</value> <!-- wth 9 branches -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>menorah</value>
                    </charProp>
                </glyph>
                
                <!-- reversed letter -->
                <glyph xml:id="mulieris">
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>‎Ↄ</value> <!-- this is the symbol for 100, will check with the Markup list on the recommended symbol; or we just encode it with hi -->
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>mulieris</value>
                    </charProp>
                </glyph>
                
               <!-- other symbols -->
                <glyph xml:id="monogram">
                    <glyphName>Monogram</glyphName>
                    <charProp>
                        <localName>text-display</localName>
                        <value>monogr.</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="palm">
                    <glyphName>Palm</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>&#x2e19;</value>
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>palm</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="star">
                    <glyphName>Star</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>*</value>
                    </charProp>
                    <charProp>
                        <localName>text-display</localName>
                        <value>star</value>
                    </charProp>
                </glyph>
                
                <glyph xml:id="x">
                    <glyphName>X</glyphName>
                    <charProp>
                        <localName>glyph-display</localName>
                        <value>☓</value>
                    </charProp>
                </glyph>
                
                <!-- Elymian symbols
                 cross_uninterpreted; hourglass; double_axe; star; sign for uninterpreted ones; figure_anthropomorphic and figure_zoomorphic;
                 add two refs to one g plus cert="low" for people to look both at double_axe and hourglass;
                 Elymian punctuation to be added + check Unicode lists;
                -->
                
                <!-- Christian sybmols
                    English terms where possible;
                    Christogram - general 8 plus two variants 16 and 20; Staurogram main 13, variant 19; BUT not in hierarchy;
                    sigma - abbreviation bit, not a separate g;
                    top level Cross, then all variants under it, including pagan;
                    19-20 - christogram_triangle, staurogram_triangle;
                    18 monogram
                -->
                
            </charDecl>
        </encodingDesc>
        
    </teiHeader>
